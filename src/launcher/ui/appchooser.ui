<?xml version='1.0' encoding='UTF-8'?>
<interface>
	<requires lib="gtk" version="4.0"/>
	<template class="AppChooser" parent="GtkBox">
		<property name="orientation">vertical</property>
		<property name="halign">start</property>
		<property name="hexpand">false</property>
		<property name="width-request">300</property>
		<style>
			<class name="app-chooser"/>
		</style>

		<child>
			<object class="GtkBox" id="app_chooser_header">
				<property name="spacing">5</property>
				<style>
					<class name="header"/>
				</style>

				<child>
					<object class="GtkSearchEntry" id="search">
						<property name="valign">start</property>
						<property name="hexpand">true</property>
						<property name="placeholder_text" translatable="yes">Search appsâ€¦</property>
					</object>
				</child>

				<child>
					<object class="GtkButton" id="close_app_chooser">
						<property name="halign">end</property>
						<property name="icon-name">window-close-symbolic</property>
						<signal name="clicked" handler="hide"/>
					</object>
				</child>
			</object>
		</child>

		<child>
			<object class="GtkScrolledWindow" id="app_grid_container">
				<property name="vexpand">true</property>
				<property name="hscrollbar-policy">never</property>

				<child>
					<object class="GtkGridView" id="app_grid">
						<property name="hexpand">true</property>
						<property name="single-click-activate">true</property>
						<property name="enable-rubberband">false</property>
						<property name="min-columns">2</property>
						<property name="max-columns">2</property>

						<style>
							<class name="app-grid"/>
							<class name="navigation-sidebar"/>
						</style>
					</object>
				</child>
			</object>
		</child>
	</template>
</interface>
