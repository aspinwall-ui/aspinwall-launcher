<?xml version='1.0' encoding='UTF-8'?>
<interface>
	<requires lib="gtk" version="4.0"/>
	<template class="AppChooser" parent="GtkBox">
		<property name="orientation">vertical</property>
		<property name="halign">start</property>
		<property name="hexpand">false</property>
		<property name="width-request">375</property>
		<style>
			<class name="app-chooser"/>
		</style>

		<child>
			<object class="GtkBox" id="app_chooser_header">
				<property name="spacing">5</property>
				<style>
					<class name="header"/>
				</style>

				<child>
					<object class="GtkSearchEntry" id="search">
						<property name="valign">start</property>
						<property name="hexpand">true</property>
						<property name="placeholder_text" translatable="yes">Search appsâ€¦</property>
					</object>
				</child>

				<child>
					<object class="GtkButton" id="close_app_chooser">
						<property name="halign">end</property>
						<property name="icon-name">window-close-symbolic</property>
						<signal name="clicked" handler="hide"/>
					</object>
				</child>
			</object>
		</child>

		<child>
			<object class="GtkScrolledWindow" id="app_grid_container">
				<property name="vexpand">true</property>
				<property name="hscrollbar-policy">never</property>

				<child>
					<object class="GtkBox">
						<property name="orientation">vertical</property>
						<!-- Favorites -->
						<child>
							<object class="GtkRevealer" id="favorites_revealer">
								<property name="reveal-child">true</property>
								<child>
									<object class="GtkBox">
										<property name="orientation">vertical</property>
										<child>
											<object class="GtkFlowBox" id="favorites_grid">
												<property name="margin-start">3</property>
												<property name="margin-end">3</property>
												<property name="margin-top">6</property>
												<property name="margin-bottom">12</property>
												<property name="hexpand">true</property>
												<property name="homogeneous">true</property>

												<property name="column-spacing">6</property>
												<property name="row-spacing">6</property>

												<property name="selection-mode">none</property>
												<property name="activate-on-single-click">false</property>

												<style>
													<class name="app-grid"/>
												</style>
											</object>
										</child>

										<child>
											<object class="GtkSeparator">
												<property name="margin-start">6</property>
												<property name="margin-end">6</property>
											</object>
										</child>
									</object>
								</child>
							</object>
						</child>

						<!-- All apps -->
						<child>
							<object class="GtkFlowBox" id="app_grid">
								<property name="margin-start">3</property>
								<property name="margin-end">3</property>
								<property name="margin-top">12</property>
								<property name="margin-bottom">3</property>
								<property name="hexpand">true</property>
								<property name="homogeneous">true</property>

								<property name="column-spacing">6</property>
								<property name="row-spacing">6</property>

								<property name="selection-mode">none</property>
								<property name="activate-on-single-click">false</property>

								<style>
									<class name="app-grid"/>
								</style>
							</object>
						</child>
					</object>
				</child>
			</object>
		</child>
	</template>
</interface>
